<!-- PAGE HEADER -->
<div class="page-header">
	<h1>All of the Statuses</h1>
</div>

<!-- LINK TO NEW STATUS FORM -->
<%= link_to "Post a new status", new_status_path, class: "btn btn-default" %>

<% @statuses.each do |status| %>
	<!-- STATUS INFO -->
	<div class="status">
		<strong><%= status.name %></strong>
		<p><%= status.content %></p>
	
		<!-- LINKS TO CONTROL STATUS -->
		<div class="meta">
			<!-- timestamp for show link -->
			<%= link_to time_ago_in_words(status.created_at) + " ago", status %>
		
			<!-- decide who can see edit/destroy links -->
			<span class="admin"> 
				 |  
				<%= link_to "Edit", edit_status_path(status) %> |
				<%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>
			</span>
		</div>
		
	</div>
<% end %>